<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>TestCenter</display-name>
  
  <filter>
    <display-name>KFilter</display-name>
    <filter-name>KFilter</filter-name>
    <filter-class>com.k99k.khunter.KFilter</filter-class>
    <init-param>
      <param-name>ini</param-name>
      <param-value>f:/works/workspace_keel/TestCenter/WebContent/WEB-INF/kconfig.json</param-value>
    </init-param>
    <init-param>
      <description>根目录的层数,用于定位Action,默认为0</description>
      <param-name>rootNum</param-name>
      <param-value>1</param-value>
    </init-param>
    <init-param>
      <description>静态内容的路径,用,号分开</description>
      <param-name>statics</param-name>
      <param-value>css,images,js,WEB-INF,test,file,fancybox</param-value>
    </init-param>
    <init-param>
      <description>静态内容的路径前缀</description>
      <param-name>staticPrefix</param-name>
      <param-value>/TestCenter</param-value>
    </init-param>
    <init-param>
      <description>Action内容的路径前缀</description>
      <param-name>actPrefix</param-name>
      <param-value>/TestCenter</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>KFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>404</error-code>
    <location>/404.html</location>
  </error-page>
</web-app>